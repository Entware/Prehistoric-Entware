+	mjpg_streamer -b -i "input_uvc.so -r 320x240 -f 5" -o "output_http.so -p 3000 -w /opt/share/www/webcam"
+	}
+
+stop() {
+	echo "stopping mjpg_streamer..."
+	killall mjpg_streamer
+	}
+
+status() {
+	echo "PID of mjpg_streamer is..."
+	pidof mjpg_streamer
+	}
+
+case "$1" in
+	start)
+		start
+		;;
+	stop)
+		stop
+		;;
+	restart)
+		stop
+		sleep 3
+		start
+		;;
+	status) status
+		;;
